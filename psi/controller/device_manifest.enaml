from atom.api import Typed, Unicode, Property

from enaml.workbench.api import PluginManifest

from .device import Device


class DeviceManifest(PluginManifest):

    device = Typed(Device)

    id = Property(cached=True)

    def _get_id(self):
        return unicode('psi.controller.{}'.format(self.device.name))
