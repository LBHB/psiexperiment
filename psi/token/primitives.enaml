################################################################################
# Tone
################################################################################
@no_inputs
def tone_factory(fs, level, frequency):
    waveform = None
    while True:
        kwargs = (yield waveform)
        samples = kwargs['samples']
        offset = kwargs['offset']
        t = np.arange(samples, dtype=np.float32)/fs + offset
        waveform = np.cos(2*np.pi*t*frequency)


enamldef Tone(Block):

    factory = tone_factory
    name = 'tone'
    label = 'tone'

    Parameter:
        name = 'level'
        label = 'level (dB SPL)'
        compact_label = 'level'
        dtype = np.dtype('float32')
        default = 60
        expression = '60'

    Parameter:
        name = 'frequency'
        label = 'frequency (Hz)'
        compact_label = 'fc'
        dtype = np.dtype('float32')
        default = 1000
        expression = '1000'


@no_inputs
def silence_factory(fs):
    waveform = None
    while True:
        kwargs = (yield waveform)
        samples = kwargs['samples']
        waveform = np.zeros(samples)


################################################################################
# Silence
################################################################################
enamldef Silence(Block):

    factory = silence_factory
    name = 'silence'
    label = 'silence'
